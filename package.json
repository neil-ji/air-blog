{
  "name": "air-blog",
  "version": "0.0.1",
  "description": "面向 React 前端开发者的 Blog 脚手架，熟悉的技术栈 + 合理的模块设计 = 无限的 DIY 潜力",
  "main": "index.js",
  "scripts": {
    "prepare": "husky",
    "lint": "eslint --fix .",
    "format": "prettier --write .",
    "dev": "next dev",
    "build": "next build",
    "start": "next start"
  },
  "engines": {
    "node": ">=21.6.1",
    "npm": ">=10.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "author": "Neil Ji",
  "license": "Apache-2.0",
  "repository": {
    "url": "https://github.com/neil-ji/blog-analyzer.git"
  },
  "devDependencies": {
    "@eslint/js": "^9.4.0",
    "@types/node": "^20.12.12",
    "eslint": "^8.56.0",
    "globals": "^15.3.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "prettier": "^3.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.12.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@types/react": "^18.3.11",
    "next": "^14.2.14",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
